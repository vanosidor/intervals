<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="circularProgressBarStyle">@style/CircularProgressBar</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <!-- BetterPickerFragment style -->
    <style name="MyCustomBetterPickerTheme">
        <item name="bpDialogBackground">@drawable/dialog_background_blue_primary</item>
        <item name="bpTextColor">@android:color/white</item>
        <item name="bpDeleteIcon">@drawable/ic_backspace_dark</item>
        <item name="bpCheckIcon">@drawable/ic_check_dark</item>
        <item name="bpKeyBackground">@drawable/key_background_dark</item>
        <item name="bpButtonBackground">@drawable/button_background_dark</item>
        <item name="bpTitleDividerColor">@color/default_keyboard_indicator_color_dark</item>
        <item name="bpDividerColor">@color/default_divider_color_dark</item>
        <item name="bpKeyboardIndicatorColor">@color/default_keyboard_indicator_color_dark</item>
    </style>

    <!--CircularProgressBar style-->
    <style name="CircularProgressBar">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="stroke_width">4dp</item>
        <item name="progress" format="float">0.1</item>
        <item name="progress_color">@color/colorAccent</item>
        <item name="progress_background_color">@android:color/white</item>
        <item name="marker_color">#ffff4444</item>
        <item name="marker_visible">false</item>
        <item name="thumb_visible">false</item>
    </style>

    <!-- Button style -->
    <style name="MyButton" parent="Base.Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@drawable/button_custom_text</item>
    </style>

    <!-- Splash Screen style -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>
</resources>
